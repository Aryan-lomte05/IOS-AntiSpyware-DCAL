{
  "name": "Defense_Evasion_Techniques",
  "patterns": [
    "(?i)(?:antivirus|security.*software).*(?:disabled|stopped).*(?:unexpectedly|unauthorized)",
    "(?i)audit.*(?:trail|log).*(?:cleared|deleted).*(?:suspicious|unauthorized)",
    "(?i)process.*name.*spoofing.*(?:detected|attempt)",
    "(?i)(?:timestamp|file.*attribute).*manipulation.*detected",
    "(?i)code.*signing.*(?:bypass|circumvent|disable).*attempt"
  ],
  "exclude_patterns": [
    "user.*initiated", "system.*update", "legitimate.*maintenance", "authorized.*administrator"
  ],
  "description": "Detects attempts to evade security controls and hide malicious activities",
  "severity": "Critical",
  "confidence": "High",
  "remediation": "Re-enable security controls, investigate cause of disabling, run full system scan.",
  "attribution": {
    "source": "MITRE ATT&CK T1562",
    "author": "Security Operations Center",
    "date_created": "2024-02-01"
  }
}
