{
  "name": "App_Masquerading",
  "patterns": [
    "\\b(?:safarii?|phonee?|messag[ez]?|facetim[ez]?|photo\\d+)\\d?\\.app\\b",
    "[\\u200B-\\u200D\\uFEFF]",
    "\\b\\w+\\.app\\.app\\b"
  ],
  "exclude_patterns": [
    "com\\.apple\\.", "/System/", "/Library/",
    "Batteries\\.app", "PeopleViewService\\.app", "FindMyExtensionContainer\\.app", 
    "SleepWidgetContainer\\.app", "WidgetKit", "ExtensionContainer", "ViewService"
  ],
  "description": "Detects obvious app masquerading attempts, excluding legitimate Apple system apps",
  "postprocess": "Verify app is actually malicious, not just descriptively named",
  "confidence": "Medium",
  "examples": [
    "safarii.app (typo)",
    "Photos.app.app (doubled extension)",
    "photo1.app (numbered variant)"
  ],
  "remediation": "Investigate app source, check app store legitimacy, verify developer signature",
  "match_type": "pattern_with_exclusions",
  "attribution": {
    "source": "Apple Security Research",
    "version": "2.0",
    "date": "2025-08-17"
  }
}
